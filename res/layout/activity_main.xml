<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#910200"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cows and Bulls"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:shadowDx="3"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:shadowColor="#4A0100" 
        android:gravity="center"/>
    
    <View
        android:id="@+id/borderLine"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="3.5dp"
        android:alpha="20"
        android:background="#000000"/>
    
    <!-- View
        android:id="@+id/borderLineShadow"
        android:layout_below="@+id/borderLine"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:alpha="0.5"
        android:background="#5c5d75"/-->
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/borderLine"
       	android:orientation="vertical"
       	android:gravity="center">
    
    	<Button
    	    android:id="@+id/continue_game"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:text="Continue Game"
    	    android:textStyle="bold"
    	    android:shadowDx="2"
        	android:shadowDy="2"
    	    android:background="#CF6E63"
    	    android:layout_marginBottom="5dp" />
    	<Button
    	    android:id="@+id/play_game"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:text="Play Game"
    	    android:textStyle="bold"
    	    android:shadowDx="2"
        	android:shadowDy="2"
    	    android:background="#CF6E63"
    	    android:layout_marginBottom="5dp" />
    	<Button
    	    android:id="@+id/instructions"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:text="Instructions"
    	    android:textStyle="bold"
    	    android:shadowDx="2"
        	android:shadowDy="2"
    	    android:background="#CF6E63"
    	    android:layout_marginBottom="5dp" />
    	
    	<Button
    	    android:id="@+id/high_scores"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:text="Scores"
    	    android:textStyle="bold"
    	    android:shadowDx="2"
        	android:shadowDy="2"
    	    android:background="#CF6E63" />

    </LinearLayout>
        
</RelativeLayout>
